<DashboardScreen>:
    name: "dashboard"  
    # MDBottomNavigation:
    #     text_color_active: "lightgrey"
    #     height: dp(25)
    #     MDBottomNavigationItem:
    #         name: "dashboard"
    #         text: "Dashboard"
    #     MDBottomNavigationItem:
    #         name: "camera"
    #         text: "Camera"
    MDBoxLayout:
        id: dashboard
        orientation: "vertical"
        padding: dp(20), dp(40)
        size_hint: 1, 1
        pos_hint: {"center_y": 0.5}
        MDAnchorLayout:
            anchor_x: "center"
            anchor_y: "top"
            MDBoxLayout:
                orientation: "vertical"
                size_hint_x: 1
                size_hint_y: None
                height: self.minimum_height  # Auto-adjust height based on content
                pos_hint: {"center_y": 0.5, "center_x": 0.5}
                spacing: "10dp"
                # MDLabel:
                #     text: "Hydrophonics Monitoring"
                #     font_style: "H3"
                #     halign: "center"    
                #     valign: "center"
                #     size_hint_y: None
                #     height: self.texture_size[1] + dp(10)  
                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint_x: 1
                    size_hint_y: None
                    adaptive_height: True
                    MDIconButton: 
                        icon: "image-multiple"
                        size_hint_y: None
                        icon_size: "32sp"
                        on_release:root.create_window()
                    MDWidget:
                        size_hint_x: 1
                    MDIconButton: 
                        icon: "account-circle"
                        icon_size: "32sp"
                        size_hint_y: None
                MDBoxLayout:
                    size_hint_y: None
                    size_hint_x: 1
                    spacing: dp(10)
                    adaptive_height: True
                    MDCard:
                        adaptive_height: True
                        adaptive_width: True
                        pos_hint: {"center_y": 0.5, "center_x": 0.5}
                        radius: [dp(10)]
                        md_bg_color: 0, 0, 0, 0
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 0.1  # Border color (Black with 20% opacity)
                            Line:
                                width: dp(1)  # Border thickness
                                rounded_rectangle: (self.x, self.y, self.width, self.height, dp(10))  # Rounded borders
                        MDBoxLayout:
                            adaptive_height: True
                            adaptive_width: True
                            orientation: "vertical"
                            size_hint: None, None
                            padding: dp(30), dp(20)
                            spacing: dp(10)
                            MDIcon: 
                                icon: "sprout"
                                pos_hint: {"center_x": .5, "center_y": .5}
                                font_size: dp(100) - dp(5)
                                theme_text_color: "Custom"
                                text_color: 0.68627,  1.00000,  0.68627, 1
                                height: self.texture_size[1]
                                width: self.texture_size[0]
                            MDLabel:
                                text: "Currently stable"
                                halign: "center"    
                                size_hint_y: None
                                height: self.texture_size[1] # Adjust height dynamically
                                font_size: dp(12)
                    MDCard:
                        adaptive_height: True
                        adaptive_width: True
                        pos_hint: {"center_y": 0.5, "center_x": 0.5}
                        md_bg_color: 0, 0, 0, 0
                        radius: [dp(10)]
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 0.1  # Border color (Black with 20% opacity)
                            Line:
                                width: dp(1)  # Border thickness
                                rounded_rectangle: (self.x, self.y, self.width, self.height, dp(10))  # Rounded borders
                        MDBoxLayout:
                            adaptive_height: True
                            adaptive_width: True
                            orientation: "vertical"
                            size_hint: None, None
                            padding: dp(30), dp(20)
                            spacing: dp(10)
                            MDIcon: 
                                icon: "lightbulb-on-outline"
                                pos_hint: {"center_x": .5, "center_y": .5}
                                font_size: dp(100) - dp(5)
                                theme_text_color: "Custom"
                                text_color: 1, 1, 0.56, 0.8
                                height: self.texture_size[1]
                                width: self.texture_size[0]
                            MDLabel:
                                text: "Light Status"
                                halign: "center"    
                                size_hint_y: None
                                height: self.texture_size[1] # Adjust height dynamically
                                font_size: dp(12)
                                bold: True
                MDBoxLayout:
                    id: container
                    orientation: "vertical"
                    size_hint_y: None
                    size_hint_x: 1
                    spacing: dp(10)
                    adaptive_height: True
