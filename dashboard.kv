<DashboardScreen>:
    name: "dashboard"  
    # MDBottomNavigation:
    #     text_color_active: "lightgrey"
    #     height: dp(25)
    #     MDBottomNavigationItem:
    #         name: "dashboard"
    #         text: "Dashboard"
    #     MDBottomNavigationItem:
    #         name: "camera"
    #         text: "Camera"
    MDBoxLayout:
        id: dashboard
        orientation: "vertical"
        padding: dp(20), dp(20)
        size_hint: 1, 1
        pos_hint: {"center_y": 0.5}
        MDAnchorLayout:
            anchor_x: "center"
            anchor_y: "top"
            MDBoxLayout:
                orientation: "vertical"
                size_hint: 1, 1
                spacing: "10dp"
                pos_hint: {'center_x': .5, 'center_y': .5}
                # MDLabel:
                #     text: "Hydrophonics Monitoring"
                #     font_style: "H3"
                #     halign: "center"    
                #     valign: "center"
                #     size_hint_y: None
                #     height: self.texture_size[1] + dp(10)  
                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint_x: 1
                    size_hint_y: None
                    adaptive_height: True
                    MDIconButton: 
                        icon: "image-multiple"
                        size_hint_y: None
                        icon_size: "32sp"
                        on_release:root.create_window()
                    MDWidget:
                        size_hint_x: 1
                    MDIconButton: 
                        icon: "account-circle"
                        icon_size: "32sp"
                        size_hint_y: None
                        on_release: root.open_menu(self)
                MDScrollView:
                    do_scroll_x: False
                    MDBoxLayout:
                        orientation: "vertical"
                        size_hint_x: 1
                        adaptive_height: True
                        spacing: dp(10)
                        MDBoxLayout:
                            id: full_container
                            orientation: "vertical"
                            size_hint_y: None
                            size_hint_x: 1
                            adaptive_height: True
                            # padding: dp(10), dp(10), dp(10), dp(10)
                        MDGridLayout:
                            id: container
                            size_hint_y: None
                            size_hint_x: 1
                            spacing: dp(10)
                            adaptive_height: True
                            cols: 2
                            col_default_width: (self.width / 2) - dp(5)
                            col_force_default: True


