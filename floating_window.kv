<FloatingWindow@MDFloatLayout>
    id: floating_window
    size_hint: 1, 1 
    md_bg_color: 0,0,0,0.5
    Widget:
        size_hint: 1, 1
        on_touch_down: lambda *args: True
        on_touch_up: lambda *args: True
        on_touch_move: lambda *args: True
        canvas.before:
            Color:
                rgba: 1, 0, 0, 1  # Red border color
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height
        index: 0
    MDAnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        padding: dp(20)
        MDCard:
            size_hint_x: 1
            size_hint_y: None
            adaptive_height: True
            padding: dp(20)
            MDBoxLayout:
                size_hint: 1, None
                pos_hint: {'center_x': .5, 'center_y': .5}
                orientation: 'vertical'
                spacing: dp(20)
                adaptive_height: True
                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint: 1, None
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    adaptive_height: True
                    MDLabel:
                        text: "Sort by"
                        height: self.texture_size[1]
                    MDIcon:
                        icon: "close"
                        height: self.texture_size[1]
                MDScrollView:
                    do_scroll_x: False
                    size_hint_x: 1
                    size_hint_y: None
                    adaptive_height: True
                    height: root.width
                    MDGridLayout:
                        adaptive_height: True
                        cols: 2
                        spacing: dp(10)
                        size_hint_x: 1
                        size_hint_y: None
                        MDSmartTile:
                            source: "assets/image.jpg"
                            size_hint: 1, None
                            height: self.width
                            radius: self.width *.05
                            box_color: 0,0,0,0
                        MDSmartTile:
                            source: "assets/image1.jpg"
                            size_hint: 1, None
                            radius: self.width *.05
                            height: self.width
                            box_color: 0,0,0,0
                        MDSmartTile:
                            source: "assets/image2.jpg"
                            size_hint: 1, None
                            radius: self.width *.05
                            height: self.width
                            box_color: 0,0,0,0
