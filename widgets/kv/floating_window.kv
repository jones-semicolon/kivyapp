<FloatingWindow>
    id: floating_window
    size_hint: 1, 1 
    md_bg_color: 0,0,0,0.5
    MDAnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        padding: dp(20)
        MDCard:
            size_hint_x: 1
            size_hint_y: None
            adaptive_height: True
            padding: dp(20)
            MDBoxLayout:
                size_hint: 1, None
                pos_hint: {'center_x': .5, 'center_y': .5}
                orientation: 'vertical'
                spacing: dp(10)
                adaptive_height: True
                MDBoxLayout:
                    id: list
                    orientation: "horizontal"
                    size_hint: 1, None
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    adaptive_height: True
                    MDIconButton:
                        icon: "arrow-left-top"
                        id: back
                        size_hint: None, None
                        # Use 'user_font_size' or 'icon_size' to define the icon size
                        user_font_size: "32sp"
                        # Make the button the same size as the icon
                        width: self.user_font_size
                        height: self.user_font_size
                        on_release: root.clear_layout()
                        disabled: True
                        opacity: 0
                    Widget:
                        size_hint_x: 1
                    # MDLabel:
                    #     text: "Sort by"
                    #     height: self.texture_size[1]
                    MDIconButton:
                        icon: "close"
                        size_hint: None, None
                        # Use 'user_font_size' or 'icon_size' to define the icon size
                        user_font_size: "32sp"
                        # Make the button the same size as the icon
                        width: self.user_font_size
                        height: self.user_font_size
                        
                        # Remove any background color or ripple
                        md_bg_color: (0, 0, 0, 0)
                        theme_text_color: "Custom"
                        text_color: (1, 1, 1, 1)
                        on_release: root.close_window()
                        # canvas.before:
                        #     Color:
                        #         rgba: 1, 0, 0, 1  # Red border color
                        #     Line:
                        #         width: 2
                        #         rectangle: self.x, self.y, self.width, self.height
                MDScrollView:
                    do_scroll_x: False
                    size_hint_x: 1
                    size_hint_y: None
                    adaptive_height: True
                    height: root.width
                    MDBoxLayout:
                        orientation: "vertical"
                        adaptive_height: True
                        size_hint_x: 1
                        size_hint_y: None
                        MDGridLayout:
                            id: grid
                            adaptive_height: True
                            cols: 2
                            spacing: dp(10)
                            size_hint_x: 1
                            size_hint_y: None
                        MDBoxLayout:
                            id: list
                            orientation: "vertical"
                            adaptive_height: True
                            spacing: dp(10)
                            size_hint_x: 1
                            size_hint_y: None
