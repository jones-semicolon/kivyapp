<SignupScreen>:
    name: "signup"  # Give the screen a name
    MDBoxLayout:
        orientation: "vertical"
        padding: "20dp"
        size_hint: 1, 1
        pos_hint: {"center_y": 0.5}
        # canvas.before:
        #     Color:
        #         rgba: 1, 0, 0, 1  # Red border color
        #     Line:
        #         width: 2
        #         rectangle: self.x, self.y, self.width, self.height
        MDAnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            MDBoxLayout:
                orientation: "vertical"
                padding: "10dp"
                size_hint_x: None
                size_hint_y: None
                width: "300dp"  # Set a width
                height: self.minimum_height  # Auto-adjust height based on content
                pos_hint: {"center_y": 0.5, "center_x": 0.5}
                spacing: "10dp"
                # canvas.before:
                #     Color:
                #         rgba: 1, 0, 0, 1  # Red border color
                #     Line:
                #         width: 2
                #         rectangle: self.x, self.y, self.width, self.height
                MDLabel:
                    text: "Sign Up"
                    font_style: "H3"
                    halign: "center"    
                    valign: "center"
                    size_hint_y: None
                    height: self.texture_size[1] + dp(10)  # Adjust height dynamically
                MDTextField:
                    mode: "fill"
                    id: username
                    hint_text: "Username"
                    size_hint_y: None
                MDRelativeLayout:
                    size_hint_y: None
                    height: password.height

                    MDTextField:
                        id: password
                        mode: "fill"
                        hint_text: "Password"
                        password: True

                    MDIconButton:
                        icon: "eye-off"
                        pos_hint: {"center_y": .5}
                        pos: password.width - self.width , 0
                        theme_text_color: "Hint"
                        on_release:
                            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                            password.password = False if password.password is True else True
                MDRaisedButton:
                    text: "Sign up"
                    theme_width: "Custom"
                    size_hint_x: 1
                    on_release: root.signup()
                MDRaisedButton:
                    text: "Login"
                    theme_width: "Custom"
                    size_hint_x: 1
                    on_release: root.manager.current = 'login'   
